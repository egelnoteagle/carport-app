<%= form_tag '/login', class: "form-horizontal text-left" do %>
  <div class="form-group has-feedback">
      <label for="inputUserName" class="col-sm-3 control-label">Email</label>
      <div class="col-sm-8">
        <%= text_field_tag :email, nil, class: 'form-control', id: 'inputUserName', placeholder: 'User Name', :required => true %>
        <i class="fa fa-user form-control-feedback"></i>
      </div>
    </div>
    <div class="form-group has-feedback">
      <label for="inputPassword" class="col-sm-3 control-label">Password</label>
      <div class="col-sm-8">
        <%= password_field_tag :password, nil, class: 'form-control', id: 'inputPassword', placeholder: 'Password', :required => true %>
        <i class="fa fa-lock form-control-feedback"></i>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8">

        <!-- <button type="submit" class="btn btn-group btn-default btn-animated">Log In <i class="fa fa-user"></i></button> -->
        <%= submit_tag "Log In", class: 'btn btn-group btn-default'  %>
        
      </div>
    </div>
  <% end %>  


