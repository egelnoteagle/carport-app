<h1>Add A New Vehicle To Your Garage</h1>

<%= form_tag '/vehicles', method: :post do %>
  <div>
    <%= label_tag :vehicle_nickname %>
    <%= text_field_tag :vehicle_nickname %>
  </div>
  <div>
    <%= label_tag :vin_num %>
    <%= text_field_tag :vin_num %>
  </div>
  <div>
    <%= label_tag :make %>
    <%= text_field_tag :make %>
  </div>
  <div>
    <%= label_tag :model %>
    <%= text_field_tag :model %>
  <div>
    <%= label_tag :year %>
    <%= text_field_tag :year %>
  </div>
  <div>
    <%= label_tag :trim %>
    <%= text_field_tag :trim %>
  <div>
    <%= label_tag :style %>
    <%= text_field_tag :style %>
  </div>
  <div>
    <%= label_tag :color %>
    <%= text_field_tag :color %>
  <div>
    <%= label_tag :license_state %>
    <%= text_field_tag :license_state %>
  </div>
  <div>
    <%= label_tag :license_number %>
    <%= text_field_tag :license_number %>
  </div>
  <div>
    <%= label_tag :mileage_reading %>
    <%= text_field_tag :mileage_reading %>
  </div>
  <div>
    <%= submit_tag "Submit" %>
  </div>
<% end %>  
<br>
