<h1>Edit Your Vehicle</h1>
<br>
<%= form_tag "/vehicles/#{@vehicle.id}", method: :patch do %>
  <div>
    <%= label_tag :vehicle_nickname %>
    <%= text_field_tag :vehicle_nickname, @vehicle.vehicle_nickname %>
  </div>
  <div>
    <%= label_tag :vin_num %>
    <%= text_field_tag :vin_num, @vehicle.vin_num %>
  </div>
  <div>
    <%= label_tag :make %>
    <%= text_field_tag :make, @vehicle.make %>
  </div>
  <div>
    <%= label_tag :model %>
    <%= text_field_tag :model, @vehicle.model %>
  <div>
    <%= label_tag :year %>
    <%= text_field_tag :year, @vehicle.year %>
  </div>
  <div>
    <%= label_tag :trim %>
    <%= text_field_tag :trim, @vehicle.trim %>
  <div>
    <%= label_tag :style %>
    <%= text_field_tag :style, @vehicle.style %>
  </div>
  <div>
    <%= label_tag :color %>
    <%= text_field_tag :color, @vehicle.color %>
  <div>
    <%= label_tag :license_state %>
    <%= text_field_tag :license_state, @vehicle.license_state %>
  </div>
  <div>
    <%= label_tag :license_number %>
    <%= text_field_tag :license_number, @vehicle.license_number %>
  </div>
  <div>
    <%= submit_tag "Submit" %>
  </div>
<% end %>  