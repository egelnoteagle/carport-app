<ul>
  <li><%= image_tag @vehicle.image.url(:medium) %></li>
  <li><h4><%= @vehicle.vehicle_nickname.titleize %></h4></li>
  <li><b>Vehicle: </b><%= @vehicle.year %> <%= @vehicle.make %> <%= @vehicle.model %> </li>
  <li><b>Trim: </b><%= @vehicle.trim %></li>
  <li><b>Style: </b><%= @vehicle.style %></li>
  <li><b>Color: </b><%= @vehicle.color %></li>
  <li><b>License Plate: </b><%= @vehicle.license_state %> <%= @vehicle.license_number %></li>
  <li><b>Vin Number: </b><%= @vehicle.vin_num %></li>

  <%= form_tag '/mileages', method: :post do %>
    <%= hidden_field_tag :vehicle_id, @vehicle.id %>
    <li><b>Mileage: <%= text_field_tag :mileage_reading, @vehicle.mileages.last.mileage_reading %></b></li>
    <a> <%= submit_tag "Submit New Mileage" %></a>
  <% end %>
</ul>

<br>
<div>
  <a  href= "<%= "/vehicles/#{@vehicle.id}/edit" %>" role="button">Edit Vehicle Details</a>  | 

  <%= link_to 'Delete Vehicle', "/vehicles/#{@vehicle.id}", method: :delete %>  | 
  
  <a  href= "<%= "/vehicles/#{@vehicle.id}/recalls" %>" role="button">Check Vehicle Recalls</a>
</div>
